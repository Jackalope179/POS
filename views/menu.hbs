    <div class="cart-container">

        <div class="row" id="Header">
            <div class="col-sm-2" id="cart-img">
                <img src="./img/shopping-cart.png" style="{" height="65px" , width="65px" } />
            </div>
            <div class="col-sm-10" id="Heading">Giỏ Hàng</div>
        </div>
        <div class="row" id="Action">
            <div class="col-sm-12">Xóa tất cả</div>
        </div>

        <hr id="hr-main" />
        <div class="cart">
            {{#each CartArray}}
            <div class="row" id="cart-row">
                <div class="col-sm-3" id="img-row">
                    <div class="image-box">
                        <img src={{this.image}} style="{" height="80px" , width="100%" } id="img-food"/>
                    </div>
                </div>
                <div class="col-sm-6" id="name-button-row">
                    <div class="row">
                        <div class="col" id="title-row">
                            <p class="title">{{this.name}}</p>
                        </div>
                    </div>
                    <div class="row num-change">
                        <div class="col" id="button-row">
                            <div class="counter">
                                <div class="btn1">-</div>
                                <div class="count">2</div>
                                <div class="btn2">+</div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="col-sm-3" id="remove-price">
                    <div class="prices">
                        <div class="remove"><img src="./img/garbage1.png" style="{" height="27px" , width="27px" } />
                        </div>
                        <div class="amount">{{this.price}}</div>
                    </div>

                </div>
            </div>
            <hr />
            {{/each}}

        </div>

        <hr id="hr-main" />
        <div class="checkout">
            <div class="total">
                <div>
                    <div class="Subtotal">Tổng:</div>
                </div>
                <div class="total-amount">330.000 VNĐ
                </div>
            </div>
            <div class="button-border">
                <a href="/thanhtoan">
                    <div class="button">Thanh toán</div>
                </a>
            </div>
        </div>
    </div>
