<div class="booking-container">
    <div class="container">
        <div class="contact-head">
            <div class="row">
                <div class="col-lg-7 col-12">
                    <div class="form-main">
                        <div class="title">
                            <h3>ĐẶT BÀN</h3>
                        </div>
                        <form class="form" action="/savebooking" method="post">
                            <div class="row">
                                <div class="col-lg-12 col-12 ">
                                    <div class="form-group">
                                        <label>Ngày đặt<span>*</span></label>
                                        <input name="date" type="date" placeholder="">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <label>Thời gian đến<span>*</span></label>
                                        <input name="startTime" type="time" placeholder="" min="15:00" max="23:00">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <label>Thời gian đi<span>*</span></label>
                                        <input name="endTime" type="time" placeholder=""min="15:00" max="23:00">
                                    </div>
                                </div>


                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <label>Số điện thoại liên hệ<span>*</span></label>
                                        <input name="phone" type="text" placeholder="">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <label>Số người<span>*</span></label>
                                        <input name="customerSeat" type="text" placeholder="">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group message">
                                        <label>Ghi chú<span>*</span></label>
                                        <textarea name="note" placeholder=""></textarea>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group" id="cash_button">
                                        <p> <button type="submit"
                                                class="subscribe btn btn-primary btn-block shadow-sm "></i> Đặt
                                                bàn</button> </p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-5 col-12">
                    <div class="single-head">
                        <div class="row" id="x">
                            <div class="remove-title">DANH SÁCH BÀN ĐÃ ĐẶT</div>
                        </div>
                        <hr id="hr-main">
                        {{#each bookingList}}
                        <div class="row" id="table-list">
                            <div class="col-md-6 col-6" id="Date_Time">
                                <div class="col-md-12" id="date_disp"><i class="fas fa-table mr-3"></i>{{this.date}}</div>
                                <div class="col-md-12" id="time_disp">{{this.startTime}} - {{this.endTime}}</div>
                            </div>
                            <div class="col-md-4 col-4" id="person">{{this.customerSeat}} người</div>
                            <div class="col-md-2 col-2 table-close" id="icon">
                                <i class="fas fa-times fa-lg mt-1"></i>
                                <input id="id" type="hidden" name="id" value="{{this.BookingId}}">
                            </div>
                        </div>
                        {{/each}}
                                                
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-second" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="modal__description">
                        <p>Bạn có chắc chắn muốn xóa đặt bàn ?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <form action ="/deleteBooking" method ="post" id ="submit-id">
                        <input type ="hidden" id ="bookingid" name="bookingid" value ="">                
                    <button type="submit" class="btn btn-primary" id="delete-clerk-btn">Xác nhận</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
    <script type = 'text/javascript' src="./js/tablebooking.js"></script>
</div>
<!--/ End Contact -->