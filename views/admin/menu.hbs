        <h3 class="food-list-name-category food_list_name-js">MENU</h3>

      </div>

      <div class="mt-4">
        <div class="row row-card food_list-js">
          {{#each MenuArray}}
            {{#if this.isRecommended}}
              <div class="col-sm-6 col-md-4 col-lg-2">
                <div class="card card--best-seller">
                  <img
                    class="card-img-top"
                    src={{this.image}}
                    alt="Card image cap"
                  />
                  <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <div class="label-control">
                      <p class="card-text">{{this.price}} VNĐ</p>
                      <a href="#" class="label-icon-cart">
                        <i class="label-icon fas fa-cart-plus"></i>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            {{else}}
              <div class="col-sm-6 col-md-4 col-lg-2">
                <div class="card">
                  <img
                    class="card-img-top"
                    src={{this.image}}
                    alt="Card image cap"
                  />
                  <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <div class="label-control">
                      <p class="card-text">{{this.price}} VNĐ</p>
